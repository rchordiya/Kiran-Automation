<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        android:paddingTop="20dp"
        android:text="Login!"
        android:textColor="#7811ff"
        android:id="@+id/Head3"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:text="User Name"
        android:id="@+id/username"
        android:textSize="20dp"
        android:layout_below="@+id/Head3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="enter user name"
        android:inputType="text"
        android:id="@+id/UserNameEdit"
        android:singleLine="true"
        android:editable="true"
        android:layout_alignBottom="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/username" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="enter password"
        android:inputType="text"
        android:id="@+id/passwordEdit"
        android:singleLine="true"
        android:editable="true"
        android:layout_alignBottom="@+id/loginPassword"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/loginPassword" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passwordEdit"
        android:layout_toRightOf="@+id/passwordEdit"
        android:layout_toEndOf="@+id/passwordEdit"
        android:layout_marginTop="102dp"
        android:text="Log In"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:text="Password"
        android:id="@+id/loginPassword"
        android:textSize="20dp"
        android:layout_below="@+id/username"
        android:layout_alignRight="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_marginTop="50dp" />
</RelativeLayout>